<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>

  <servlet>
    <servlet-name>byId</servlet-name>
    <servlet-class>Servlets.ByIdServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>servlet</servlet-name>
    <servlet-class>Servlets.ResultServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>updateServlet</servlet-name>
    <servlet-class>Servlets.UpdateServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>insertServlet</servlet-name>
    <servlet-class>Servlets.InsertServlet</servlet-class>
  </servlet>

  <servlet>
    <servlet-name>finalServlet</servlet-name>
    <servlet-class>Servlets.FinalServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>byId</servlet-name>
    <url-pattern>/employee_by_id</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>servlet</servlet-name>
    <url-pattern>/employee</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>updateServlet</servlet-name>
    <url-pattern>/employee_update</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>insertServlet</servlet-name>
    <url-pattern>/insert_employee</url-pattern>
  </servlet-mapping>

  <servlet-mapping>
    <servlet-name>finalServlet</servlet-name>
    <url-pattern>/final</url-pattern>
  </servlet-mapping>


</web-app>
